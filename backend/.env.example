# Server
PORT=3001

# Frontend (Designer Extension served via webflow cli)
FRONTEND_URL=http://localhost:1337
FRONTEND_ORIGINS=http://localhost:1337,http://127.0.0.1:1337

# Sessions
COOKIE_SECURE=auto  # true|false|auto
SESSION_SECRET=replace_me

# Webflow OAuth
WEBFLOW_CLIENT_ID=replace_me
WEBFLOW_CLIENT_SECRET=replace_me
WEBFLOW_REDIRECT_URI=http://localhost:3001/auth/callback

# Scopes (optional override)
WEBFLOW_SCOPES=sites:read,authorized_user:read,assets:read,assets:write

# Redis (optional)
REDIS_URL=redis://localhost:6379
